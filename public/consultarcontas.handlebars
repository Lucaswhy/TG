	<form id="divBusca" class="form-cadastro">
        
        <h2>Lista de contas: </h2>
        
        <div class="form-row">
            <div class="col-md-3">
                <input class="form-control" type="text" id="txtBusca" name="busca"/>
            </div>
            <div class="col-md-2 mb-2">
                <button id="btnBusca" type="button" class="btn btn-primary" onclick="search()" >Buscar</button>
            </div>
        </div>
        
        <div id="divTabela" class="maxWidth">
            <table id="tableCons">
                <thead>
                    <tr>
                        <br>
                        <hr>
                        {{#each conta}}
                        <div class="container mt-4">	
						    <div class="card">
							    <div class="card-body">
                                <h4>CÃ³digo da Conta: {{codConta}}</h4>
                                        <p>
                                    Tipo da Conta: {{tipoConta}}
                                        </p>
                                    Fornecedor: {{nomeFornecedor}}
                                        </p>
                                    Valor: {{#corrigirValor valConta}}{{/corrigirValor}}
                                        </p>
                                    <a href ="/deletarcontas/{{_id}}">
                                    <button type="button" class="btn btn-danger mt-4">Deletar Conta</button></a>
                                    <a href ="/editarcontas/{{_id}}">
                                    <button type="button" class="btn btn-primary mt-4">Editar</button></a>
							    </div>
                            </div>
						</div>
						{{else}}

                        {{/each}}
                    </tr>
                </thead>
            </table>
        </div>
    </form>

    <script type="text/javascript">
        function search(){

         var bc = new String;

         bc = document.getElementsByName("busca")[0].value;
         if(bc != ""){           
              window.location.href="http://localhost:8081/consultarcontas/"+bc;
         }
         else{           
              window.location.href="http://localhost:8081/consultarcontas/";
         }
    }

    </script>