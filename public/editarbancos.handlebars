<h2>Editar Bancos</h2>

    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}

    <form class="form-cadastro" method="POST" action="/bancoedicao">

        <input type="hidden" name="_id" value="{{banco._id}}">

        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefault02">Código do Banco</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Cod. Banco" name="Digito">
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationDefault02">Nome do Banco</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Nome do Banco" name="NumConta">
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefault02">Número do Banco</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Num. Banco" name="Digito">
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationDefault02">CNPJ</label>
                <input type="email" class="form-control cnpj" id="validationDefault02" placeholder="CNPJ" name="Nome">
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationDefault02">Telefone</label>
                <input type="text" class="form-control phone" id="validationDefault02" placeholder="Telefone" name="CodAgencia">
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationDefault02">E-mail</label>
                <input type="email" class="form-control" id="validationDefault02" placeholder="E-mail" name="Nome">
            </div>
        </div>

        <h3>Tipo</h3>
		<br>

        <div class="form-row">
            <div class="custom-control custom-radio custom-control-inline">
  				<input type="radio" id="radioCNAB240" name="tipoarq" class="custom-control-input" required>
  				<label class="custom-control-label" for="radioCNAB240">CNAB 240</label>
			</div>
			<div class="custom-control custom-radio custom-control-inline">
  				<input type="radio" id="radioCNAB400" name="tipoarq" class="custom-control-input">
  				<label class="custom-control-label" for="radioCNAB400">CNAB 400</label>
			</div>
        </div>
		<br>

        <button class="btn btn-primary" type="submit">Editar</button>
    </form>