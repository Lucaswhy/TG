   <h2>Emissão de Relatórios</h2>
   <hr>

   <div class="container">
        <div class="card">
            <div class="card-header">
                Filtros
            </div>
            <div class="card-body">
                <form class="form-row">
                    <fieldset class="col-md-2 mb-5 mr-4 pr-5 pl-3 border rounded" id="contas">
                        <legend style="font-size:medium">Tipo de Contas:</legend>
                        <div class="custom-control custom-checkbox mt-2">
                            <input type="checkbox" class="custom-control-input" id="aberta" name="aberta">
                            <label class="custom-control-label" for="aberta">Aberta</label>
                        </div>
                        <div class="custom-control custom-checkbox mt-4">
                            <input type="checkbox" class="custom-control-input" id="fechada" name="fechada">
                            <label class="custom-control-label" for="fechada">Fechada</label>
                        </div>
                        <div class="custom-control custom-checkbox mt-4">
                            <input type="checkbox" class="custom-control-input" id="cancelada" name="cancelada">
                            <label class="custom-control-label" for="cancelada">Cancelada</label>
                        </div>
                    </fieldset>
                    <fieldset class="col-md-3,5 mb-3 ml-3 pl-3 pr-5 border rounded">
                        <legend style="font-size:medium">Datas:</legend>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="valconta">Emissão de</span>
                            </div>
                            <input type="date" class="form-control" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required name="emissao1">
                            <div class="input-group-prepend ml-3">
                                <span class="input-group-text" id="valconta">até</span>
                            </div>
                            <input type="date" class="form-control" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required name="emissao2">
                        </div>
                        <div class="input-group mt-4 mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="valconta">Vencimento de</span>
                            </div>
                            <input type="date" class="form-control" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required name="vencimento1">
                            <div class="input-group-prepend ml-3">
                                <span class="input-group-text" id="valconta">até</span>
                            </div>
                            <input type="date" class="form-control" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required name="vencimento2">
                        </div>
                    </fieldset>
                </form>
                <form class="form-row">
                    <fieldset class="col-md-2.5 mb-3 pl-2 pr-4 border rounded">
                        <legend style="font-size:medium">Fornecedor:</legend>
                        <input type="text" class="form-control mb-3" id="fornecedor" placeholder="Fornecedor" required name="fornecedor">
                    </fieldset>
                    <fieldset class="col-md-3,5 mb-3 ml-3 pl-3 pr-4 border rounded">
                        <legend style="font-size:medium">Valor:</legend>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="valconta">Valor mínimo de</span>
                            </div>
                            <input type="text" class="form-control money" placeholder="0,00" id="vminimo" aria-describedby="inputGroupPrepend2" required name="valor1">
                            <div class="input-group-prepend ml-3">
                                <span class="input-group-text" id="valconta">Valor máximo de</span>
                            </div>
                            <input type="text" class="form-control money" placeholder="0,00" id="vmaximo" aria-describedby="inputGroupPrepend2" required name="valor2">
                        </div>
                    </fieldset>
                </form>
                <fieldset class="border col-md-6 pr-4 mr-5 pb-0">
                    <legend style="font-size:medium">Ordenação:</legend>
                    <div class="form-row">
                        <fieldset class="col-md-6 mb-5 ml-4 pr-5 pl-3 border rounded" id="contas">
                            <legend style="font-size:small">Ordenar por:</legend>
                            <div class="custom-control custom-radio mt-2">
                                <input type="radio" class="custom-control-input" id="valor" name="ordenar">
                                <label class="custom-control-label" for="valor">Valor</label>
                            </div>
                            <div class="custom-control custom-radio mt-4">
                                <input type="radio" class="custom-control-input" id="dataEmissao" name="ordenar">
                                <label class="custom-control-label" for="dataEmissao">Data de Emissão</label>
                            </div>
                            <div class="custom-control custom-radio mt-4 mb-3">
                                <input type="radio" class="custom-control-input" id="dataVencimento" name="ordenar">
                                <label class="custom-control-label" for="dataVencimento">Data de Vencimento</label>
                            </div>
                        </fieldset>
                        <fieldset class="col-md-4 ml-4 pr-5 pl-3 mb-5 border rounded" id="contas">
                            <legend style="font-size:small">Ordem:</legend>
                            <div class="custom-control custom-radio mt-4">
                                <input type="radio" class="custom-control-input" id="crescente" name="ordem">
                                <label class="custom-control-label" for="crescente">Crescente</label>
                            </div>
                            <div class="custom-control custom-radio mt-5">
                                <input type="radio" class="custom-control-input" id="decrescente" name="ordem">
                                <label class="custom-control-label" for="decrescente">Decrescente</label>
                            </div>
                        </fieldset>
                    </div>
                </fieldset>
                <div class="mb-5" style="position:relative;">
                    <button type="button" class="btn btn-primary" name="busca" onclick="filtro()">Aplicar</button></a>
                </div>
            </div>    
        </div>
    </div>

    <br>
    <hr>
    <br>

    <div class="container mb-5" style="width: 1200px;">	
        <div class="card" style="width: 100%; height: 600px; overflow-y: scroll;">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Codigo da Conta</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Data de Vencimento</th>
                    <th scope="col">Multa</th>
                    <th scope="col">Juros</th>
                    <th scope="col">Desconto</th>
                    </tr>
                </thead>
                {{#each conta}}
                <tbody>
                    <tr>
                    <th scope="row">{{codConta}}</th>
                    <td>{{valConta}}</td>
                    <td>{{#formatDate dataVencimento}}{{/formatDate}}</td>
                    <td>{{Juros}}</td>
                    <td>{{Multa}}</td>
                    <td>{{Desconto}}</td>
                    </tr>
                </tbody>
                {{else}}

                {{/each}}
            </table>
        </div>
    </div>
    
