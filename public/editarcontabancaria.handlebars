<h2>Editar Agências</h2>

    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}

    <form class="form-cadastro" method="POST" action="/agenciaedicao">

        <input type="hidden" name="_id" value="{{banco._id}}">

        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationDefault01">Agência</label>
                <select id="inputSituacao" class="form-control" name="agencia" value="{{usuario.Situacao}}">
					<option selected>Selecione a situação da conta.</option>
					<option>Fechada.</option>
					<option>Aberta.</option>
					<option>Cancelada.</option>
				</select>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefault02">Código da Conta</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Cod. Conta" name="CodContaBanc">
            </div>
            <div class="col-md-2 mb-3">
                <label for="validationDefault02">Número da Conta</label>
                <input type="email" class="form-control" id="validationDefault02" placeholder="Num. Conta" name="NumContaBanc">
            </div>
            <div class="col-md-1 mb-3">
                <label for="validationDefault02">Dígito</label>
                <input type="email" class="form-control" id="validationDefault02" placeholder="Dígito" name="Digito">
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-2 mb-3">
      			<label for="validationDefaultUsername">Saldo</label>
      			<div class="input-group">
        			<div class="input-group-prepend">
          				<span class="input-group-text" id="inputGroupPrepend2">R$</span>
        			</div>
        			<input type="text" class="form-control money" id="validationDefaultUsername" placeholder="0,00" aria-describedby="inputGroupPrepend2" required name="Saldo">
      			</div>
    		</div>
            <div class="col-md-2.5 mb-3">
				<label for="inputSituacao">Situação da conta:</label>
				<select id="inputSituacao" class="form-control" name="SituacaoConta" value="{{usuario.Situacao}}">
					<option selected>Selecione a situação da conta.</option>
					<option>Ativa.</option>
					<option>Inativa.</option>
				</select>
			</div>
        </div>

        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefault01">Data de Abertura</label>
                <input type="date" class="form-control" id="dataEmi" placeholder="Data de Abertura" required name="DataAbertura">
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationDefault02">Titular</label>
                <input type="email" class="form-control" id="validationDefault02" placeholder="Titular" name="Titular">
            </div>
        </div>
		<br>

        <button class="btn btn-primary" type="submit" onclick="sobrescreveData()">Editar</button>
    </form>

    <script type="text/javascript">
		function sobrescreveData(){

                de = new Date;
                dv = new Date;

                if (document.getElementsByName("DataAbertura")[0].value == ""){
            
                de = "{{#formatDateBD contaBanc.dataAbertura}}{{/formatDateBD}}";
                    document.getElementsByName("DataAbetura")[0].value = de;
                }
            }
	</script>