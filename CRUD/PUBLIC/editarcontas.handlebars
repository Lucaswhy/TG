<h2>Editar Fornecedor</h2>

            {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}

        <form class="form-cadastro" method="POST" action="/contaedicao">

        <input type="hidden" name="_id" value="{{conta._id}}">

        <div class="form-row">
            <div class="custom-control custom-radio custom-control-inline">
  				<input type="radio" id="radioBoleto" name="tipoconta" class="custom-control-input" required>
  				<label class="custom-control-label" for="radioBoleto">Boleto</label>
			</div>
			<div class="custom-control custom-radio custom-control-inline">
  				<input type="radio" id="radioDARF" name="tipoconta" class="custom-control-input">
  				<label class="custom-control-label" for="radioDARF">DARF</label>
			</div>
			<div class="custom-control custom-radio custom-control-inline">
  				<input type="radio" id="radioIPTU" name="tipoconta" class="custom-control-input">
  				<label class="custom-control-label" for="radioIPTU">IPTU</label>
			</div>
			<div class="custom-control custom-radio custom-control-inline">
  				<input type="radio" id="radioAgua/luz" name="tipoconta" class="custom-control-input">
  				<label class="custom-control-label" for="radioAgua/luz">Água/Luz</label>
			</div>
        </div>
		<br>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationDefault02">Código da Conta</label>
                <input type="number" class="form-control" id="validationDefault02" placeholder="Cod. Conta" required name="CodConta" value="{{conta.codConta}}">
            </div>
            <div class="col-md-2 mb-3">
      			<label for="validationDefaultUsername">Valor da Conta</label>
      			<div class="input-group">
        			<div class="input-group-prepend">
          				<span class="input-group-text" id="valconta">R$</span>
        			</div>
        			<input type="text" class="form-control money" id="validationDefaultUsername" placeholder="0,00" aria-describedby="inputGroupPrepend2" required name="ValConta" value="{{conta.valConta}}">
      			</div>
    		</div>
			<div class="col-md-4 mb-3">
                <label for="validationDefault02">Fornecedor</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Fornecedor" required name="NomeFornecedor" value="{{conta.nomeFornecedor}}">
            </div>
  		</div>
        
        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefault02">Juros</label>
                <input type="text" class="form-control percent" id="validationDefault02" placeholder="0%" required name="Juros" value="{{conta.Juros}}">
            </div>
            <div class="col-md-2 mb-3">
      			<label for="validationDefaultUsername">Multa</label>
      			<div class="input-group">
        			<div class="input-group-prepend">
          				<span class="input-group-text" id="inputGroupPrepend2">R$</span>
        			</div>
        			<input type="text" class="form-control money" id="validationDefaultUsername" placeholder="0,00" aria-describedby="inputGroupPrepend2" required name="Multa" value="{{conta.Multa}}">
      			</div>
    		</div>
			<div class="col-md-2 mb-3">
      			<label for="validationDefaultUsername">Desconto</label>
      			<div class="input-group">
        			<div class="input-group-prepend">
          				<span class="input-group-text" id="inputGroupPrepend2">R$</span>
        			</div>
        			<input type="text" class="form-control money" id="validationDefaultUsername" placeholder="0,00" aria-describedby="inputGroupPrepend2" required name="Desconto" value="{{conta.Desconto}}">
      			</div>
    		</div>
        </div>

        <div class="form-row">
			<div class="col-md-2 mb-3">
                <label for="validationDefault01">Data de Emissão</label>
                <input type="text" class="form-control data" id="dataEmi" placeholder="Data de Emissão" required name="DataEmissao" value="{{conta.dataEmissao}}">
            </div>
            <div class="col-md-2 mb-3">
                <label for="validationDefault02">Data de Vencimento</label>
                <input type="text" class="form-control data" id="dataVenc" placeholder="Data de Vencimento" required name="DataVencimento" value="{{conta.dataVencimento}}">
            </div>
			<div class="col-md-5 mb-3">
                <label for="validationDefault02">Código de Barras</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Cod. Barras" required name="CodBarras" value="{{conta.codigoBarras}}">
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-5 mb-3">
				<label for="validationTextarea">Observação</label>
                <textarea class="form-control" id="validationTextarea" placeholder="Observação" required name="Observacao"> value="{{conta.Observacao}}" </textarea >
            </div>
            <div class="col-md-5 mb-3">
				<label for="validationTextarea">Descrição</label>
                <textarea class="form-control" id="validationTextarea2" placeholder="Descrição" required name="Descricao"> value="{{conta.Descricao}}" </textarea>
        	</div>
		</div>

        <button class="btn btn-primary" type="submit">Editar</button>
    </form>

