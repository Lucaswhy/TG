
    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}
        
    <form id="divBusca" class="form-cadastro">

        <h2>Lista de usuários: </h2>

        <div class="form-row">
            <div class="col-md-3">
                <input class="form-control" type="text" id="txtBusca" name="busca"/>
            </div>
            <div class="col-md-2 mb-2">
             <button id="btnBusca" type="button" class="btn btn-primary" onclick="search()" >Buscar</button>
            </div>
        </div>
        
        <div id="divTabela" class="maxWidth">
            <table id="tableCons">
                <thead>
                    <tr>
                        <br>
                        <hr>
                        {{#each usuario}}
                        <div class="container mt-4">	
                            <div class="card">
                                <div class="card-body">
                                    <h4>Cracha: {{Cracha}}</h4>
                                    <p>
                                        Usuário: {{Nome}}
                                    </p>
                                    <a href ="/usuariodeletar/{{_id}}">
                                    <button type="button" class="btn btn-danger mt-4">Deletar Usuário</button></a>
                                    <a href ="/editarusuario/{{_id}}">
                                    <button type="button" class="btn btn-primary mt-4">Editar</button></a>

                                    <a href ="/liberarcadastro/{{_id}}">
                                    <button type="button" class="btn btn-warning mt-4">Liberar Cadastro</button></a>
                                </div>
                            </div>
                        </div>
                        {{else}}
                        {{/each}}
                    </tr>
                </thead>
            </table>
        </div>    
    </form>

    <script type="text/javascript">
        function search(){

         var bc = new String;

         bc = document.getElementsByName("busca")[0].value;
         if(bc != ""){           
              window.location.href="http://localhost:8081/consultarusuario/"+bc;
         }
    }

    </script>