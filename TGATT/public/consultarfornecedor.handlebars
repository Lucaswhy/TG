    <link rel='stylesheet' type='text/css' media='screen' href='consultarfornecedor.css'>

    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}

	<form id="divBusca" class="form-cadastro">

        <h2>Lista de fornecedores: </h2>

        <div class="form-row">
            <div class="col-md-3">
                <input class="form-control" type="text" id="txtBusca" name="busca"/>
            </div>
            <div class="col-md-2 mb-2">
                <button id="btnBusca" type="button" class="btn btn-primary" onclick="search()" >Buscar</button>
            </div>
        </div>
        
        <div id="divTabela" class="maxWidth">
            <table id="tableCons">
                <thead>
                    <tr>
                        <br>
                        <hr>
                        {{#each fornecedor}}
                        <div class="container mt-4">	
						    <div class="card">
							    <div class="card-body">
                                <h4>Código do Fornecedor:{{codFornecedor}}</h4>
                                        <p>
                                    Razão Social: {{RazaoSocial}}
                                        </p>
                                    <a href ="/deletarfornecedor/{{_id}}">
                                    <button type="button" class="btn btn-warning mt-4">Deletar Fornecedor</button></a>
                                    <a href ="/editarfornecedor/{{_id}}">
                                    <button type="button" class="btn btn-primary mt-4">Editar</button></a>
							    </div>
                            </div>
						</div>
						{{else}}

                        {{/each}}
                    </tr>
                </thead>
            </table>
        </div>
    </form>

    <script type="text/javascript">
        function search(){

         var bc = new String;

         bc = document.getElementsByName("busca")[0].value;
         if(bc != ""){           
              window.location.href="http://localhost:8081/consultarfornecedor/"+bc;
         }
    }

    </script>