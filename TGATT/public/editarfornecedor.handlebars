        <form class="form-cadastro" method="POST" action="/fornecedoredicao">

        <input type="hidden" name="_id" value="{{fornecedor._id}}">

        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefault01">Codigo do Fornecedor</label>
                <input type="number" class="form-control" id="validationDefault01" placeholder="Cod.Fornecedor" name="codFornecedor" value="{{fornecedor.codFornecedor}}" >
            </div>
            <div class="col-md-6 mb-3">
                <label for="validationDefault02">Razão Social</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Razão Social" name="RazaoSocial" value="{{fornecedor.RazaoSocial}}" >
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefault02">CNPJ</label>
                <input type="text" class="form-control cnpj" id="validationDefault02" placeholder="CNPJ" name="CNPJn" value="{{fornecedor.CNPJ}}" >
            </div>

                <input type="hidden" name="CNPJ" value="">

            <div class="col-md-5 mb-3">
                <label for="validationDefault03">E-mail</label>
                <input type="text" class="form-control" id="validationDefault03" placeholder="nome@exemplo.com" name="Email" value="{{fornecedor.Email}}" >
            </div>
        </div>
        
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationDefault02">Telefone</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Telefone" name="Telefone" value="{{fornecedor.Telefone}}" >
            </div>
            <div class="col-md-2 mb-3">
                <label for="validationDefault01">Endereço</label>
                <input type="text" class="form-control" id="validationDefault01" placeholder="Endereço" name="Endereco" value="{{fornecedor.Endereco}}">
            </div>
        </div>

        <h3>Endereço</h3>

        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefault01">CEP</label>
                <input type="text" class="form-control" id="validationDefault01"  name="CEP" placeholder="CEP" value="{{fornecedor.CEP}}" >
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationDefault01">Número</label>
                <input type="text" class="form-control" id="validationDefault01" placeholder="Número" name="Numero" value="{{fornecedor.Numero}}" >
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefault02">Bairro</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Bairro" name="Bairro" value="{{fornecedor.Bairro}}" >
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationDefault02">Cidade</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Cidade" name="Cidade" value="{{fornecedor.Cidade}}" >
            </div>
            <div class="form-group col-md-2.5">
                <label for="inputEstado">Estado</label>
                <select id="inputEstado" class="form-control" name="Estado">
                    <option>{{fornecedor.Estado}}</option>
                    <option>AC</option>
                    <option>AL</option>
                    <option>AP</option>
                    <option>AM</option>
                    <option>BA</option>
                    <option>CE</option>
                    <option>DF</option>
                    <option>ES</option>
                    <option>GO</option>
                    <option>MA</option>
                    <option>MT</option>
                    <option>MS</option>
                    <option>MG</option>
                    <option>PA</option>
                    <option>PB</option>
                    <option>PR</option>
                    <option>PE</option>
                    <option>PI</option>
                    <option>RJ</option>
                    <option>RN</option>
                    <option>RS</option>
                    <option>RO</option>
                    <option>RR</option>
                    <option>SC</option>
                    <option>SP</option>
                    <option>SE</option>
                    <option>TO</option>
                </select>
            </div>
        </div>

        <button class="btn btn-primary" type="submit" onclick="limpaCNPJ()">Editar</button>
    </form>

